packages:
  .

flags: +buildExamples

if (!os(darwin) && !os(windows))
  package snap-server
    flags: +openssl

if (impl(ghc >= 9.12))
  constraints:
    , hashable >= 1.5
    , template-haskell >= 2.23
    , containers >= 0.8
    , data-default >= 0.8

  allow-newer:
    , *:time
    , *:ghc-prim
    , *:template-haskell
    , *:base
    , *:containers
